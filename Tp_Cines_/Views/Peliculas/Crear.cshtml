                    <textarea rows="5" id="Descripcion" name="Descripcion"></textarea>*@

                @Html.LabelFor(u => u.Descripcion)
                @Html.TextBoxFor(u => u.Descripcion)
                @Html.ValidationMessageFor(u => u.Descripcion)

                @*@Html.LabelFor(model => model.IdCalificacion)*@

                @Html.LabelFor(u => u.IdCalificacion, "Calificaciones")

                @Html.DropDownList("IdCalificacion", String.Empty)


                @*<select id="Nombre" name="Nombre">
                        <option>ATP</option>
