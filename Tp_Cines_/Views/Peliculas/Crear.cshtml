@using CapaServicio;
@model  Peliculas

@{
    ViewBag.Title = "Crear";

}



            <h2>Crear Nueva Pelicula</h2>

           @using (Html.BeginForm("Crear", "Peliculas", FormMethod.Post, new { enctype = "multipart/form-data" }))
