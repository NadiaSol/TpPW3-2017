@using CapaServicio;
@model  Peliculas

@{
    ViewBag.Title = "Crear";

}


<div class="container-fluid">
    <div class="col-md-6 col-md-offset-3">


        <h2>Crear Nueva Pelicula</h2>

        @using (Html.BeginForm("Crear", "Peliculas", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {


            <div class="form-group">
                @*@Html.ValidationSummary(true)*@
                @*@Html.ValidationSummary(false, "", new { @class = "text-danger" })*@

                @Html.LabelFor(u => u.Nombre, new { @class = "col-lg-2 control-label" })

                @Html.TextBoxFor(u => u.Nombre, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.Nombre)


                </div>

                @*@Html.LabelFor(model => model.Descripcion)

                    <textarea rows="5" id="Descripcion" name="Descripcion"></textarea>*@

            <div class="form-group">
                @Html.LabelFor(u => u.Descripcion, new { @class = "col-lg-2 control-label" })
                @Html.TextBoxFor(u => u.Descripcion, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.Descripcion)


            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.IdCalificacion)*@

                @Html.LabelFor(u => u.IdCalificacion, "Calificaciones", new { @class = "col-lg-2 control-label" })

                @Html.DropDownList("IdCalificacion", null , String.Empty , new { @class = "form-control" })

                </div>
                @*<select id="Nombre" name="Nombre">
                        <option>ATP</option>
                        <option>+13</option>
                        <option>+16</option>
                        <option>+18</option>

                    </select>*@
                @*@Html.ValidationMessageFor(u => u.Calificaciones.Nombre)*@
            <div class="form-group">
                @Html.LabelFor(u => u.IdGenero, "Generos", new { @class = "col-lg-2 control-label" })

                @Html.DropDownList("IdGenero", null, String.Empty, new { @class = "form-control" })

            </div>


            <div class="form-group">
                @Html.LabelFor(u => u.Imagen, new { @class = "col-lg-2 control-label" })
                @Html.TextBoxFor(u => u.Imagen, new { type = "file" })
                @Html.ValidationMessageFor(u => u.Imagen)

            </div>


            <div class="form-group">

                @Html.LabelFor(u => u.Duracion, new { @class = "col-lg-2 control-label" })
                @Html.TextBoxFor(u => u.Duracion, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.Duracion)

            </div>

            <div class="col-md-6 col-md-offset-5">
                <input type="submit" value="Crear" class="btn btn-success btn-lg" />
            </div>

        }


            </div>
    </div>


