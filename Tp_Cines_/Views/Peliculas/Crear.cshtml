                        <option>Animación</option>
                        <option>Ciencia Ficción</option>
                    </select>*@

                @*@Html.ValidationMessageFor(u => u.Generos.Nombre)*@

                @Html.LabelFor(u => u.Imagen)
                @Html.TextBoxFor(u => u.Imagen, new { type = "file" })
                @Html.ValidationMessageFor(u => u.Imagen)


                @Html.LabelFor(u => u.Duracion)
                @Html.TextBoxFor(u => u.Duracion)
                @Html.ValidationMessageFor(u => u.Duracion)



                <input type="submit" value="Crear" class="button fit" />


            }






