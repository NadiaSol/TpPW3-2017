@using CapaServicio;

@model IEnumerable<CapaServicio.Peliculas>

@{
    ViewBag.Title = "MovieMark";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Wrapper -->
<div id="wrapper">
    <!--Intro -->
    <section id="intro" class="wrapper style1 fullscreen fade-up">
        <div class="inner">
  
            <p>
                <img src="~/img/Publicidad.jpg" width="1150" height="450" alt="Publicidad" data-position="center center" />
            </p>
          
        </div>
    </section>

    <!-- One -->
    <section id="one" class="wrapper style2 spotlights">
       
@*            <a href="#"><img src="~/img/mujer_maravilla.jpg" width="350" height="450" alt="Mujer_Maravilla" data-position="center center" /></a>*@
            @foreach(var item in Model)
            {  <section>
              <a href="#"><img src="@item.Imagen" width="350" height="450" alt="Mujer_Maravilla" data-position="center center" /></a>
         
            <div class="content">
                <div class="inner">
                    <h2>@item.Nombre</h2>
                    <h5>
                        @item.Descripcion
                    </h5>

                    <h5>
                        @item.Generos.Nombre
                    </h5>

                    <h5>
                        Calificación: @item.Calificaciones.Nombre
                    </h5>
                  
                </div>
            </div>

                 </section>
            }
       

        </section>
</div>