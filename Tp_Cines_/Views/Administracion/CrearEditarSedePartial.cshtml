@using Tp_Cines_.Models;
@model  SedeViewModel

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(u => u.Nombre, new { @class = "col-lg-2 control-label" })
        @Html.TextBoxFor(u => u.Nombre, new { @type = "text", @class = "form-control" })
        @Html.ValidationMessageFor(u => u.Nombre)
    </div>

    <div class="form-group">
        @Html.LabelFor(u => u.PrecioGeneral, new { @class = "col-lg-2 control-label" })
        @Html.TextBoxFor(u => u.PrecioGeneral, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.PrecioGeneral)
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.Direccion, new { @class = "col-lg-2 control-label" })
        @Html.TextBoxFor(u => u.Direccion, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.Direccion)
    </div>
    <div class="col-md-6 col-md-offset-5">
        <button class="btn btn-primary btn-lg" type="submit">Guardar</button>
    </div>
