@using CapaServicio
@model List<Reservas>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Sede</th>
            <th>Versión</th>
            <th>Película</th>
            <th>Precio</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr class="active">
                    <td>
                        @Html.DisplayFor(modelItem => item.Sedes.Nombre)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Versiones.Nombre)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Peliculas.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sedes.PrecioGeneral)
                    </td>

                </tr>

            }
        }

    </tbody>

</table>