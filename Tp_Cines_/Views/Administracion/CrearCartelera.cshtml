@using System.Collections
@using CapaServicio;
@model  Carteleras
@{
    ViewBag.Title = "Gestión de Carteleras";
    Layout = "~/Views/Administracion/_LayoutAdministrador.cshtml";
}

<h2>Sedes</h2>

<section id="three" class="wrapper style1 fade-up">
    <div class="inner">

        @using (Html.BeginForm())
        {
            @Html.HiddenFor(u => u.IdCartelera)
            <div class="split style2">
                <section>
                    <h2>Crear Cartelera</h2>
                </section>
                <section>
                    <!--Armar formulario-->
                    <!--Peliculas-->
                    @Html.LabelFor(u => u.IdPelicula, "Peliculas")
                    @Html.DropDownListFor(u => u.IdPelicula, new SelectList(ViewBag.Peliculas, "IdPelicula", "Nombre"), "Seleccione")
                    @Html.ValidationMessageFor(u => u.IdPelicula)
                    <!--Sedes-->

                    @Html.LabelFor(u => u.IdSede, "Sedes")
                    @Html.DropDownListFor(u => u.IdSede, new SelectList(ViewBag.Sedes, "IdSede", "Nombre"), "Seleccione")
                    @Html.ValidationMessageFor(u => u.IdSede)
                    <!--HoraInicio-->
                    <div>
                        @Html.LabelFor(u => u.HoraInicio)
                        @Html.TextBoxFor(u => u.HoraInicio, new { @type = "number", @min = "1"})
                        @Html.ValidationMessageFor(u => u.HoraInicio)
                    </div>
                    <!--FechaInicio-->
                    <div>
                        @Html.LabelFor(u => u.FechaInicio)
                        @Html.TextBoxFor(u => u.FechaInicio, new {type="date"})
                        @Html.ValidationMessageFor(u => u.FechaInicio)
                    </div>
                    <!--FechaFin-->
                    <div>
                        @Html.LabelFor(u => u.FechaFin)
                        @Html.TextBoxFor(u => u.FechaFin, new { type = "date"})
                        @Html.ValidationMessageFor(u => u.FechaFin)
                    </div>
                    <!--NumeroSala-->
                    <div>
                        @Html.LabelFor(u => u.NumeroSala)
                        @Html.TextBoxFor(u => u.NumeroSala, new { @type = "number", @min = "1"})
                        @Html.ValidationMessageFor(u => u.NumeroSala)
                    </div>
                    <!--Version-->
                    @Html.LabelFor(u => u.IdVersion, "Versiones")
                    @Html.DropDownListFor(u => u.IdVersion, new SelectList(ViewBag.Versiones, "IdVersion", "Nombre"), "Seleccione")
                    @Html.ValidationMessageFor(u => u.IdVersion)
                    <!--Lunes-->

                    @Html.CheckBoxFor(u => u.Lunes)
                    @Html.LabelFor(u => u.Lunes)
                    <!--Martes-->
                    @Html.CheckBoxFor(u => u.Martes)
                    @Html.LabelFor(u => u.Martes)

                    <!--Miercoles-->
                    @Html.CheckBoxFor(u => u.Miercoles)
                    @Html.LabelFor(u => u.Miercoles)

                    <!--Jueves-->
                    @Html.CheckBoxFor(u => u.Jueves)
                    @Html.LabelFor(u => u.Jueves)

                    <!--Viernes-->
                    @Html.CheckBoxFor(u => u.Viernes)
                    @Html.LabelFor(u => u.Viernes)

                    <!--Sabado-->
                    @Html.CheckBoxFor(u => u.Sabado)
                    @Html.LabelFor(u => u.Sabado)

                    <!--Domingo-->
                    @Html.CheckBoxFor(u => u.Domingo)
                    @Html.LabelFor(u => u.Domingo)


                    <ul class="actions">
                        <li><a href="" class="button submit">Guardar</a></li>
                    </ul>
                </section>
            </div>


        }
    </div>
</section>