@model CapaServicio.Peliculas

@{
    ViewBag.Title = "EditarPelicula";

}
<div class="container-fluid">
    <div class="col-md-6 col-md-offset-3">

        <h2>Editar Pelicula</h2>

        @using (Html.BeginForm("EditarPelicula", "Administracion", FormMethod.Post,
                                   new { enctype = "multipart/form-data" }))
        {

            @*@Html.ValidationSummary(true)*@
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <fieldset>

                @Html.HiddenFor(u => u.IdPelicula)

                @*@Html.Label("Codigo Pelicula")
                    @Html.DisplayFor(u => u.IdPelicula)*@
                <div class="form-group">
                    @Html.LabelFor(u => u.Nombre, new { @class = "col-lg-2 control-label" })

                    @Html.TextBoxFor(u => u.Nombre, new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.Nombre) </div>
                <div class="form-group">
                    @Html.LabelFor(u => u.Descripcion, new { @class = "col-lg-2 control-label" })
                    @Html.TextBoxFor(u => u.Descripcion, new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.Descripcion) </div>
                <div class="form-group">
                    @Html.LabelFor(u => u.IdCalificacion, "Calificaciones", new { @class = "col-lg-2 control-label" })

                    @Html.DropDownList("IdCalificacion", null, String.Empty, new { @class = "form-control" }) </div>
                    <div class="form-group">
                        @Html.LabelFor(u => u.IdGenero, "Generos", new { @class = "col-lg-2 control-label" })

                        @Html.DropDownList("IdGenero", null, String.Empty, new { @class = "form-control" }) </div>
                <div class="form-group">
                    @Html.LabelFor(u => u.Imagen, new { @class = "col-lg-2 control-label" })
                    @if (!string.IsNullOrEmpty(Model.Imagen))
                {
                        <img src="@Model.Imagen" height="450" width="350" class="img-responsive" alt="@Model.Nombre" />
                    }
                    @Html.TextBoxFor(u => u.Imagen, new { type = "file" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(u => u.Duracion, new { @class = "col-lg-2 control-label" })
                    @Html.TextBoxFor(u => u.Duracion, new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.Duracion)



                </div>


                <div class="col-md-6 col-md-offset-5">
                    <input type="submit" value="Guardar" class="btn btn-success btn-lg" />
                </div>

</fieldset>

        }
        <br />
        <br />

        </div>
</div>