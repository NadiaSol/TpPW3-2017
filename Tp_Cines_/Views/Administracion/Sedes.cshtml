@using CapaServicio;
@model  IEnumerable<Sedes>
@{
    ViewBag.Title = "Gestión de Sedes";
}


<section id="three" class="wrapper style1 fade-up">
    <div class="inner">
        <h2>Sedes</h2>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Dirección</th>
                    <th>Precio Entrada General</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr class="active">
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Direccion)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.PrecioGeneral)
                            </td>
                            <td class="button fit">

                                @Html.ActionLink("Editar", "EditarSede", new { id = item.IdSede })
                            </td>

                        </tr>

                    }
                }

            </tbody>

        </table>

        @Html.ActionLink("Crear nuevo", "CrearSede", "Administracion", null, new { @class = "btn btn-default btn-success btn-lg btn-block" })
    </div>
</section>