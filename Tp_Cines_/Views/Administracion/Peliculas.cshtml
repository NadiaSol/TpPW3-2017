@model IEnumerable<CapaServicio.Peliculas>

@{
    ViewBag.Title = "Gestión de Películas";

}


<div class="container-fluid">
    



        <h2>Películas vigentes</h2>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Pelicula</th>
                    <th>Descripción</th>
                    <th>Genero</th>
                    <th>Calificacion</th>
                    <th>Imagen</th>

                    <th>Duración</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Peliculas in Model)
            {
                    <tr class="active">
                        <td>
                            @Html.DisplayFor(modelItem => Peliculas.Nombre)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => Peliculas.Descripcion)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => Peliculas.Generos.Nombre)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => Peliculas.Calificaciones.Nombre)
                        </td>

                        <td>
                            @if (!string.IsNullOrEmpty(Peliculas.Imagen))
                            {
                                <a class="pop" href="@Peliculas.Imagen" target="_blank"><img class="img-thumbnail input-sm" src="@Peliculas.Imagen" alt="@Peliculas.Nombre @Peliculas.Descripcion" /></a>
                            }
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => Peliculas.Duracion)
                        </td>

                        <td>
                            <a href="/Administracion/EditarPelicula/@Peliculas.IdPelicula " class="button fit">Editar</a>
                        </td>

                    </tr>

                }

            </tbody>

        </table>


        @Html.ActionLink("Crear nuevo", "Crear", "Peliculas", null, new { @class = "btn btn-default btn-success btn-lg btn-block" })

        
</div>
